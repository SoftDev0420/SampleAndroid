<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dev.faminetofeast.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorTheme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="famine to feast"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="italic"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/btnInfo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_info"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:onClick="onInfo"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/texas_food"
            android:scaleType="center"/>
        <LinearLayout
            android:id="@+id/llCashDonation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="It's never been easier to help end hunger"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="@android:color/white"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:text="Click To Schedule\nDonation"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_round_button"
                android:onClick="onSchedule"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="I'd like to make a cash donation"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="$10"
                    android:textColor="@android:color/white"
                    android:background="@color/colorButtonBackground"
                    android:onClick="onDonate10"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="$25"
                    android:textColor="@android:color/white"
                    android:background="@color/colorButtonBackground"
                    android:onClick="onDonate25"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="$50"
                    android:textColor="@android:color/white"
                    android:background="@color/colorButtonBackground"
                    android:onClick="onDonate50"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="Other"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:background="@color/colorButtonBackground"
                    android:onClick="onDonateOther"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llScheduleDonation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:visibility="invisible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanks for helping!\nPlease confirm pickup address and any special pickup instructions"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="italic"/>
            <EditText
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:gravity="top|left"
                android:textSize="12sp"
                android:background="@android:color/white"/>
            <EditText
                android:id="@+id/txtInstruction"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:gravity="top|left"
                android:hint="Add special instructions for pickup here"
                android:textSize="12sp"
                android:background="@android:color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_round_button"
                    android:onClick="onSubmit"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_round_button"
                    android:onClick="onCancel"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/colorTheme">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:text="Did you know?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Opened bottles of shampoo can still be donated"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>
